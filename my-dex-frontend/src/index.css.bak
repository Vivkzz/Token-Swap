:root {
  font-family: 'Inter', sans-serif; /* Modern sans-serif font */
  line-height: 1.5;
  font-weight: 400;
  color-scheme: dark;
  color: #e0e0e0; /* Light gray for default text */
}

html, body {
  margin: 0;
  min-width: 320px;
  min-height: 100vh;
  background-color: #0a0a0a; /* Deep dark background */
  overflow-x: hidden; /* Prevent horizontal scroll */
}

a {
  font-weight: 500;
  color: #8b5cf6; /* Purple accent for links */
  text-decoration: none;
}
a:hover {
  color: #a78bfa;
}

h1, h2, h3, h4, h5, h6 {
  color: #ffffff; /* Pure white for headings */
}

button {
  border-radius: 12px; /* More rounded buttons */
  border: 1px solid transparent;
  padding: 0.6em 1.2em;
  font-size: 1em;
  font-weight: 500;
  font-family: inherit;
  background: none;
  cursor: pointer;
  transition: all 0.3s ease; /* Smooth transitions for all button states */
}
button:hover {
  border-color: #8b5cf6; /* Purple border on hover */
}
button:focus,
button:focus-visible {
  outline: 4px auto -webkit-focus-ring-color;
  outline-color: #8b5cf6; /* Purple focus ring */
}